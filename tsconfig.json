{
	"compilerOptions": {
		"emitDeclarationOnly": false,
		"jsx": "preserve",
		"noEmit": true,
		"outDir": "Target",
		"rootDir": "."
	},
	"exclude": ["**/node_modules/**", "**/Target/**"],
	"extends": "@playform/build/tsconfig",
	"include": [
		"./Elements/",
		"./Vanilla/",
		"./Dependency/",
		"./Dependency/Biome/",
		"./Dependency/Land/",
		"./Dependency/OXC/",
		"./Dependency/Rolldown/",
		"./Dependency/SWC/",
		"./Dependency/Tauri/"
	],
	"watchOptions": {
		"excludeDirectories": ["**/node_modules/**", "**/Target/**"]
	}
}
